<h2>User info</h2>
<%= image_tag user.get_profile_image(100, 100) %>
<table class="table table-hover">
  <tr>
    <th>name</th>
    <th><%= user.name %></th>
  </tr>
  <tr>
    <th>introduction</th>
    <th><%= user.introduction %></th>
  </tr>
</table>
<%= link_to edit_user_path(user), role: "button" do %>
  <button class="btn btn-primary w-100 bg-light text-secondary border border-secondary" type="submit"><i class="fa-solid fa-user-cog"></i></button>
<% end %>