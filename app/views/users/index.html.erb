<div class="container">
  <div class="row">
    <div class="col-md-4">
      <%= render 'showuser', user: @user %>
      <%= render 'books/newbook', book: @book %>
    </div>
    <div class="col-md-8">
      <h2>Users</h2>
      <table class="table table-hover">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= image_tag user.get_profile_image(80, 80) %></td>
            <td><%= user.name %></td>
            <td>
              <%= link_to 'show', user_path(user) %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>