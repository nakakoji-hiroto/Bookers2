<h2 class="mt-3">New book</h2>
<%= form_with model: book do |f| %>

<label for="book_title">Title</label>
<div class="form_field mb-3">
  <%= f.text_field :title, class: "book_title w-100 form-control border border-secondary rounded" %>
</div>

<label for="book_body">Opinion</label>
<div class="form_area mb-3">
  <%= f.text_area :body, class: "book_body w-100 form-control border border-secondary rounded" %>
</div>

<div class="form_button">
  <%= f.submit 'Create Book', class: "bg-success text-light border-0 rounded px-3 py-2" %>
</div>

<% end %>