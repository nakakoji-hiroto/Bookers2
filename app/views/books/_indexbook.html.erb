<h2>Books</h2>
<table class="table table-hover">
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>
<% books.each do |books| %>
  <tbody>
  <tr>
    <td><%= image_tag books.user.get_profile_image(80, 80) %></td>
    <td><%= link_to book_path(books) do %>
          <%= books.title %>
        <% end %>
    </td>
    <td><%= books.body %></td>
  </tr>
  </tbody>
<% end %>
</table>